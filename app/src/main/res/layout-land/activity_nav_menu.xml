<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NavMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/wgu_logo_nav"
                android:layout_width="169dp"
                android:layout_height="169dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/wgu_logo"
                android:contentDescription="@string/wgu_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/app_name_nav"
                android:text="Course Commander"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/dkBlue_100"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/wgu_logo_nav" />

            <TextView
                android:id="@+id/greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dkBlue_100"
                android:text=""
                app:layout_constraintTop_toBottomOf="@id/app_name_nav" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/main_terms_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#267F9A"
                android:text="@string/terms"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:cornerRadius="12dp"/>

            <Button
                android:id="@+id/main_courses_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#267F9A"
                android:text="@string/courses"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:cornerRadius="12dp"/>

            <Button
                android:id="@+id/main_assessments_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#267F9A"
                android:text="@string/assessments"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/dkBlue_100"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>