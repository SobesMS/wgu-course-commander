<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NavMenu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/wgu_logo_nav"
                android:layout_width="169dp"
                android:layout_height="169dp"
                app:srcCompat="@drawable/wgu_logo"
                android:contentDescription="@string/wgu_logo"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/greeting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="25sp"
                android:hint="Hello Matt!" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:id="@+id/main_terms_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#267F9A"
                android:onClick="goToTermList"
                android:text="@string/terms"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:cornerRadius="12dp"/>

            <Button
                android:id="@+id/main_courses_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#267F9A"
                android:onClick="goToCourseList"
                android:text="@string/courses"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:cornerRadius="12dp"/>

            <Button
                android:id="@+id/main_assessments_button"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:backgroundTint="#267F9A"
                android:onClick="goToAssessmentList"
                android:text="@string/assessments"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:cornerRadius="12dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>