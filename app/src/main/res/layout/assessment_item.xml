<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:background="@color/item_row_ltBlue">

        <TextView
            android:id="@+id/text_view_assessment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Sample Assessment Title"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_view_assessment_goal_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_assessment_title"
            android:text="Completion Goal: 00/00/00"
            android:maxLines="1"
            android:textSize="14sp"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>