<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/termsLinearBtns"
        android:layout_marginBottom="12dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/termTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="5dp"
                android:text="@string/title"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edit_text_term_title"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignBaseline="@+id/termTitle"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/termTitle"
                android:hint="enter a term title (req)"
                android:importantForAutofill="no"
                android:inputType="text"
                android:textColorHint="#757575"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/termStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/termTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="5dp"
                android:text="@string/start_date"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_start_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignBaseline="@+id/termStartDate"
                android:layout_marginEnd="16dp"
                android:layout_toEndOf="@+id/termStartDate"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="select a start date (req)"
                android:importantForAutofill="no"
                android:longClickable="false"
                android:textColorHint="#757575"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/termEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/termStartDate"
                android:layout_alignParentStart="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="5dp"
                android:text="@string/end_date"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_view_end_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignBaseline="@+id/termEndDate"
                android:layout_alignStart="@+id/text_view_start_date"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:hint="select an end date (req)"
                android:importantForAutofill="no"
                android:longClickable="false"
                android:textColorHint="#757575"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/courseListHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/termEndDate"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24sp"
                android:layout_marginBottom="10dp"
                android:text="@string/course_list"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/termAddCourseButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_toEndOf="@id/courseListHead"
                android:layout_alignTop="@id/courseListHead"
                android:layout_marginTop="-13dp"
                android:padding="10dp"
                android:contentDescription="@string/add_course"
                app:tint="@color/black"
                app:srcCompat="@drawable/ic_add"
                style="?android:borderlessButtonStyle" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/termCourseList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_below="@id/courseListHead"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                tools:listitem="@layout/recyclerview_item_small" />

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/termsLinearBtns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/termSaveButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="14dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:text="@string/save_record"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/termDeleteButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:backgroundTint="@color/red"
            android:textColor="@color/white"
            app:cornerRadius="12dp"
            android:text="@string/delete_record"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>